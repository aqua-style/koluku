        <% end %>
      </div>
    </div>
  </div>



  <div class="container">
      <%= render 'layouts/flash_messages' %>
      
      <div class="search">
        <div class="row m5-r m5-l">
          <div class="text-center">
            <%= form_tag(shops_path, method: :get) do %>
              <div class="form-group form-inline">
                <%= text_field_tag :area, @area, class: 'form-control input-lg', placeholder: "地名", size: 5 %> × 
                <%= text_field_tag :tenpo_genre, @tenpo_genre, class: 'form-control input-lg', placeholder: "（例）店名、ファミレス、カフェ、居酒屋", size: 30 %>
                <%= submit_tag '検索', class: 'btn btn-kensaku m5-t' %>
