      <div class="cover-contents">
        <% if request.smart_phone? || request.tablet? %>
          <img style="max-width:100%;" src ="/images/cover-bg4-1200x300-03sm.png">
        <% else %>
          <div class="bura">
            <img style="max-width:100%;" src ="/images/cover-bg5-mov1.png">
            <div class="onimage swing"><img style="max-width:100%;" src="./images/cover-bg5-mov1-asi3.png"></div>
          </div>
          
